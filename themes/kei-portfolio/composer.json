{
    "name": "kei-portfolio/wordpress-theme",
    "description": "WordPress theme for Kei's portfolio website",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Kei",
            "email": "admin@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^1.10",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-parallel-lint/php-console-highlighter": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "@test:syntax",
            "@test:standards"
        ],
        "test:all": [
            "@test:syntax",
            "@test:standards",
            "@test:unit"
        ],
        "test:syntax": "vendor/bin/phpunit --testsuite=syntax",
        "test:standards": "vendor/bin/phpunit --testsuite=standards",
        "test:group1": "vendor/bin/phpunit --testsuite=syntax",
        "test:group3": "vendor/bin/phpunit --testsuite=group3",
        "test:group10": "vendor/bin/phpunit --testsuite=group10-security-performance",
        "test:security": "vendor/bin/phpunit tests/SecurityTest.php",
        "test:performance": "vendor/bin/phpunit tests/PerformanceTest.php",
        "test:unit": "vendor/bin/phpunit --testsuite=all",
        "test:coverage": "vendor/bin/phpunit --coverage-html coverage/html --coverage-text",
        "lint": [
            "@lint:php",
            "@lint:phpcs"
        ],
        "lint:php": "vendor/bin/parallel-lint --exclude vendor --exclude node_modules .",
        "lint:phpcs": "vendor/bin/phpcs --standard=WordPress --extensions=php --ignore=vendor/,node_modules/,tests/ .",
        "lint:phpcs:fix": "vendor/bin/phpcbf --standard=WordPress --extensions=php --ignore=vendor/,node_modules/,tests/ .",
        "analyze": "vendor/bin/phpstan analyze --level=6 --memory-limit=256M",
        "analyze:baseline": "vendor/bin/phpstan analyze --level=6 --memory-limit=256M --generate-baseline",
        "check": [
            "@lint:php",
            "@test:syntax",
            "@test:standards"
        ],
        "check:full": [
            "@lint",
            "@analyze",
            "@test:all"
        ],
        "install-cs": [
            "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ],
        "post-install-cmd": [
            "@install-cs"
        ],
        "post-update-cmd": [
            "@install-cs"
        ]
    },
    "scripts-descriptions": {
        "test": "Run syntax and standards tests",
        "test:all": "Run all test suites",
        "test:syntax": "Check PHP syntax in all files",
        "test:standards": "Check WordPress coding standards",
        "test:group1": "Run Group 1 tests (syntax and standards)",
        "test:group3": "Run Group 3 tests (page templates - front half)",
        "test:group10": "Run Group 10 tests (security and performance)",
        "test:security": "Run security tests only",
        "test:performance": "Run performance tests only",
        "test:unit": "Run all unit tests",
        "test:coverage": "Generate code coverage report",
        "lint": "Run all linting tools",
        "lint:php": "Check PHP syntax using parallel-lint",
        "lint:phpcs": "Check WordPress coding standards using PHPCS",
        "lint:phpcs:fix": "Fix WordPress coding standards issues automatically",
        "analyze": "Run PHPStan static analysis",
        "analyze:baseline": "Generate PHPStan baseline",
        "check": "Run quick checks (lint and basic tests)",
        "check:full": "Run all checks (lint, analyze, and all tests)"
    },
    "autoload": {
        "files": [
            "functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "KeiPortfolio\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/yourusername/kei-portfolio/issues",
        "source": "https://github.com/yourusername/kei-portfolio"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "vendor/szepeviktor/phpstan-wordpress/extension.neon"
            ]
        }
    }
}
version: '3.8'

# ==========================================================================
# WordPress テーマ kei-portfolio 開発環境
# ==========================================================================

services:
  # WordPress + Apache + PHP環境
  wordpress:
    build:
      context: .
      target: development
    container_name: kei-portfolio-dev
    ports:
      - "8080:80"
    volumes:
      # ホットリロード用のボリュームマウント
      - ./wordpress/wp-content/themes/kei-portfolio:/var/www/html/wp-content/themes/kei-portfolio:delegated
      - ./wordpress/wp-content/uploads:/var/www/html/wp-content/uploads:delegated
      - wordpress_data:/var/www/html
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_NAME: kei_portfolio_dev
      WORDPRESS_DB_USER: wp_user
      WORDPRESS_DB_PASSWORD: wp_password
      WORDPRESS_DEBUG: 1
      WORDPRESS_DEBUG_LOG: 1
      WORDPRESS_DEBUG_DISPLAY: 1
      WP_ENVIRONMENT_TYPE: development
    depends_on:
      - db
      - redis
    networks:
      - kei-portfolio-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/wp-admin/install.php"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  # MariaDB データベース
  db:
    image: mariadb:10.11
    container_name: kei-portfolio-db
    ports:
      - "3306:3306"
    volumes:
      - db_data:/var/lib/mysql
      - ./docker/mysql/init:/docker-entrypoint-initdb.d:ro
    environment:
      MYSQL_ROOT_PASSWORD: root_password
      MYSQL_DATABASE: kei_portfolio_dev
      MYSQL_USER: wp_user
      MYSQL_PASSWORD: wp_password
      MYSQL_CHARSET: utf8mb4
      MYSQL_COLLATION: utf8mb4_unicode_ci
    networks:
      - kei-portfolio-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "mariadb-admin", "ping", "-h", "localhost", "-u", "root", "-proot_password"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Redis キャッシュ
  redis:
    image: redis:7-alpine
    container_name: kei-portfolio-redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
      - ./docker/redis/redis.conf:/usr/local/etc/redis/redis.conf:ro
    command: redis-server /usr/local/etc/redis/redis.conf
    networks:
      - kei-portfolio-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 30s
      timeout: 10s
      retries: 3

  # phpMyAdmin (開発用データベース管理)
  phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    container_name: kei-portfolio-pma
    ports:
      - "8081:80"
    environment:
      PMA_HOST: db
      PMA_PORT: 3306
      PMA_USER: root
      PMA_PASSWORD: root_password
      MYSQL_ROOT_PASSWORD: root_password
    depends_on:
      - db
    networks:
      - kei-portfolio-network
    restart: unless-stopped

  # MailHog (開発用メールキャッチャー)
  mailhog:
    image: mailhog/mailhog:latest
    container_name: kei-portfolio-mail
    ports:
      - "1025:1025" # SMTP
      - "8025:8025" # Web UI
    networks:
      - kei-portfolio-network
    restart: unless-stopped

  # Node.js 開発サーバー (アセット監視・ビルド)
  node:
    image: node:18-alpine
    container_name: kei-portfolio-node
    working_dir: /app
    volumes:
      - ./wordpress/wp-content/themes/kei-portfolio:/app:delegated
    command: npm run dev
    ports:
      - "3000:3000" # Webpack dev server
    environment:
      NODE_ENV: development
      CHOKIDAR_USEPOLLING: true
    networks:
      - kei-portfolio-network
    restart: unless-stopped
    depends_on:
      - wordpress

  # Nginx (リバースプロキシ・静的ファイル配信)
  nginx:
    image: nginx:alpine
    container_name: kei-portfolio-nginx
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./docker/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./docker/nginx/sites/:/etc/nginx/conf.d/:ro
      - ./docker/nginx/ssl/:/etc/nginx/ssl/:ro
      - wordpress_data:/var/www/html:ro
    depends_on:
      - wordpress
    networks:
      - kei-portfolio-network
    restart: unless-stopped

volumes:
  wordpress_data:
    driver: local
  db_data:
    driver: local
  redis_data:
    driver: local

networks:
  kei-portfolio-network:
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: 172.20.0.0/16